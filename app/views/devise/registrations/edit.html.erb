<div class='registration-main'>
  <%= form_with model: current_user, local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h1 class='form-header-text'>
          アカウント情報編集
        </h1>
      </div>

      <%= render 'devise/shared/error_messages', model: f.object %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">子どものお名前</label>
        </div>
        <%= f.text_area :child_first_name, class:"input-default", id:"childname", placeholder:"例) じろう", maxlength:"40" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">クラス</label>
        </div>
        <%= f.collection_select(:team_id, Team.all, :id, :name, {}, {class:"select-box", id:"team"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前(全角)</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
          <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 太郎" %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前カナ(全角)</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
          <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) タロウ" %>
        </div>
      </div>
      <div class='register-btn'>
        <%= f.submit "更新", class:"register-red-btn" %>
      </div>
    </div>
  <% end %>

  <%= link_to "編集キャンセル", :back %>

</div>